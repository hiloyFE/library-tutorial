extends layout

block content
  h1 Author #{author.title} 
  p #{author.span_time}

  div(style='margin-left:20px;margin-top:20px')
    h4 Books
    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title} 
        dd #{book.summary}

      else
        P This author has no books.

  hr
  p 
    a(href=author.url+'/delete') Delete author